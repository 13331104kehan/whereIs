template(name="register")
	.container
		.row
			.col-md-4.col-md-offset-2
				img(src="images/logo.png")
			.col-md-4
				h1.text-center.login-title 注册
				.signup-wall
					form.form-signin#register-module(action='/signup', method='POST')
						input(type='text', name='username', id = 'username', class='form-control', placeholder='Username',required, autofocus)
						input(type='password', name='password', id = 'password', class='form-control nomargin', placeholder='Password', required)
						.row
							.col-md-6
								button(class='btn btn-lg btn-primary btn-block Register') Register
							.col-md-6
								a(href="/login")
									button(class='btn btn-lg btn-warning btn-block SignIn') Return to Sign in
						span.clearfix

